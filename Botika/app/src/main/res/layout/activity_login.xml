<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="botika.aliahmed.com.botika.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16sp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/hanger"
            android:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8sp"
            android:text="BO"
            android:textColor="@color/black"
            android:textScaleX="3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIkA"
            android:textColor="@color/black"
            android:textScaleX="1.9"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="32sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/round_rectangle_with_border"
            android:padding="8sp" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="32sp"
            android:layout_marginRight="32sp"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_rectangle_with_border"
            android:inputType="textPassword"
            android:padding="8sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="86sp"
            android:layout_marginRight="86sp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/black"
            android:text="Log in"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6sp"
            android:layout_marginTop="12sp"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:padding="6sp"
            android:text="Or, you can sign with"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFacebook"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:tint="@color/black"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/imgTwitter"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginLeft="8sp"
                android:tint="@color/black"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/imgGoogle"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:tint="@color/black"
                android:layout_marginLeft="8sp"
                android:src="@drawable/google" />
        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/txtGuest"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginRight="16sp"-->
        <!--android:layout_marginTop="16sp"-->
        <!--android:gravity="bottom|end"-->
        <!--android:text="Continue as a guest "-->
        <!--android:textAllCaps="false" />-->


    </LinearLayout>

</LinearLayout>
