<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.3"
        android:background="@drawable/curve_layout"
        android:gravity="center|top"
        android:orientation="vertical"
        android:scaleX="1.5">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/transparent_circle"
            android:gravity="top|center"
            android:orientation="vertical"
            android:padding="20sp">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/hanger"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8sp"
                android:fontFamily="@font/quicksandregular"
                android:text="BO"
                android:textColor="@color/white"
                android:textScaleX="1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandregular"
                android:text="TIkA"
                android:textColor="@color/white"
                android:textScaleX="0.7"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtWelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/quicksandregular"
            android:scaleY="1.4"
            android:text="Hi Ali Ahmed, I am botika"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/quicksandregular"
            android:scaleY="1.4"
            android:text="Your Personal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandregular"
            android:scaleY="1.4"
            android:text="Fashion Stylish"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:fontFamily="@font/quicksandregular"
            android:gravity="center"
            android:text="Let me help your next look"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="" />

        <Button
            android:id="@+id/btnChatWithMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:layout_marginLeft="65sp"
            android:layout_marginRight="65sp"
            android:background="@drawable/rount_rectangle_yellow"
            android:fontFamily="@font/quicksandregular"
            android:text="CHAT WITH ME"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>